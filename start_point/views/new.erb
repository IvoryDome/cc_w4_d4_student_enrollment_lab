<form method="post" action="/students">
  <label for="first-name">First Name:</label>
  <input id="first-name" type="text" name="first_name"/>

  <label for="second-name">Second Name:</label>
  <input id="second-name" type="text" name="second_name"/>


  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <% @houses.each do |house| %>
        <option value=<%= house.id %>><%= house.name.capitalize %></option>
    <% end %>
  </select>

  <label for="age">Age:</label>
  <input id="age" type="number" name="age"/>

  <input type="submit" value="Enrol Student"/>

</form>
